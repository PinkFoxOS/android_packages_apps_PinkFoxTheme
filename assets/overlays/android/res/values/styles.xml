<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Material.Settings" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:colorBackground">@color/theme_white</item>
        <item name="android:colorPrimary">@color/theme_accent</item>
        <item name="android:colorPrimaryDark">@color/theme_accent</item>
        <item name="android:colorAccent">@color/theme_accent</item>
        <item name="android:navigationBarColor">#FFd200</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.Material.Settings.CompactMenu" parent="@android:style/Theme.Material.Settings">
        <item name="android:colorBackground">@color/theme_white</item>
        <item name="android:colorPrimary">@color/theme_accent</item>
        <item name="android:colorPrimaryDark">@color/theme_accent</item>
        <item name="android:colorAccent">@color/theme_accent</item>
        <item name="android:textColorPrimary">@color/theme_dark</item>
    </style>

    <style name="Theme.Material.Settings.BaseDialog" parent="@android:style/Theme.Material.Settings">
        <item name="android:colorBackground">@color/theme_white</item>
        <item name="android:colorPrimary">@color/theme_accent</item>
        <item name="android:colorPrimaryDark">@color/theme_accent</item>
        <item name="android:colorAccent">@color/theme_accent</item>
    </style>

    <style name="TextAppearance.Material.DialogWindowTitle" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textColor">@color/theme_accent</item>
    </style>

</resources>
