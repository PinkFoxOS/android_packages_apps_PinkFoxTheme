<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialtactsTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/DialtactsActionBarStyle</item>
        <item name="android:actionBarTheme">@android:style/ThemeOverlay.Material.Dark.ActionBar</item>
        <item name="android:statusBarColor">@*common:color/theme_kfox_dark</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="DialtactsThemeWithoutActionBarOverlay" parent="DialtactsTheme">
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:statusBarColor">@*common:color/theme_kfox_dark</item>
    </style>

    <style name="SettingsStyle" parent="@android:style/Theme.Material.Light">
        <item name="android:actionBarStyle">@style/Cyngn.AppBar</item>
        <item name="android:actionBarTheme">@style/Cyngn.AppBar.Theme</item>
        <item name="android:colorAccent">@*common:color/theme_kfox</item>
        <item name="android:colorBackground">@*common:color/theme_background</item>
        <item name="android:statusBarColor">@*common:color/theme_kfox_dark</item>
    </style>

    <style name="Cyngn.AppBar" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:background">@*common:color/theme_kfox</item>
    </style>

    <style name="Cyngn.AppBar.Theme" parent="@android:style/ThemeOverlay.Material.ActionBar">
        <item name="android:textColorPrimary">@*common:color/theme_white</item>
    </style>

    <style name="AlertDialogTheme" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@*common:color/theme_kfox</item>
    </style>

    <style name="Theme.InCallScreen" parent="@android:style/Theme.Material.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:actionBarStyle">@style/InCallActionBarStyle</item>
        <item name="android:colorPrimaryDark">@*common:color/theme_kfox_dark</item>
        <item name="android:buttonStyleToggle">@style/InCallCompoundButton</item>
    </style>

    <style name="InCallActionBarStyle" parent="@android:style/Widget.Material.Light.ActionBar">
        <item name="android:background">@*common:color/theme_kfox</item>
        <item name="android:textColor">@*common:color/theme_white</item>
        <item name="android:textColorPrimary">@*common:color/theme_white</item>
    </style>

    <style name="DialtactsActionBarStyle" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:background">@*common:color/theme_kfox</item>
        <item name="android:textColorPrimary">@*common:color/theme_white</item>
    </style>

    <style name="InCallButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="InCallCompoundButton" parent="InCallButton">
        <item name="android:background">@null</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
    </style>

    <style name="DialtactsActivityTheme" parent="DialtactsTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@*common:color/theme_kfox_dark</item>
    </style>

</resources>
