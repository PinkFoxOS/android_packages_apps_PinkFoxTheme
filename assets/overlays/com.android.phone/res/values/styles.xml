<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Material.Settings" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/Cyngn.AppBar</item>
        <item name="android:colorBackground">@*common:color/theme_white</item>
        <item name="android:statusBarColor">@*common:color/theme_wileyfox_orange_dark</item>
        <item name="android:colorEdgeEffect">@*common:color/theme_edge</item>
    </style>

    <style name="Cyngn.AppBar" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:background">@*common:color/theme_wileyfox_orange</item>
    </style>

    <style name="NetworkOperatorsSettingsTheme" parent="@android:style/Theme.Material.Light">
        <item name="android:actionBarStyle">@style/Cyngn.AppBar</item>
        <item name="android:actionBarTheme">@style/Cyngn.AppBar2</item>
        <item name="android:colorBackground">@*common:color/theme_white</item>
        <item name="android:colorPrimary">@*common:color/theme_kfox</item>
        <item name="android:colorPrimaryDark">@*common:color/theme_kfox_dark</item>
        <item name="android:statusBarColor">@*common:color/theme_wileyfox_orange_dark</item>
    </style>

    <style name="Cyngn.AppBar2" parent="@android:style/ThemeOverlay.Material.ActionBar">
        <item name="android:textColorPrimary">@*common:color/theme_white</item>
    </style>

    <style name="DialtactsActionBarStyle" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:background">@*common:color/theme_kfox</item>
        <item name="android:textColorPrimary">@*common:color/theme_white</item>
    </style>

    <style name="SettingsLight" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:windowBackground">@*common:color/theme_background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/DialtactsActionBarStyle</item>
        <item name="android:colorAccent">@*common:color/theme_wileyfox_orange</item>
        <item name="android:textColorPrimary">@*common:color/theme_black</item>
        <item name="android:textColorSecondary">@*common:color/theme_dark</item>
        <item name="android:statusBarColor">@*common:color/theme_kfox_dark</item>
        <item name="android:windowActionBarOverlay">false</item>
    </style>

    <style name="Theme.Settings" parent="@style/Theme.Material.Settings" />

    <style name="DialerSettingsLight" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:actionBarStyle">@*common:style/Cyngn.AppBar</item>
        <item name="android:colorAccent">@*common:color/theme_wileyfox_orange</item>
        <item name="android:statusBarColor">@*common:color/theme_wileyfox_orange_dark</item>
        <item name="android:colorEdgeEffect">@*common:color/theme_edge</item>
    </style>

</resources>
